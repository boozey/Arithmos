<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:padding="12dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">
        <TextView android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary_dark"
            android:textSize="16sp"
            android:text="Accept"/>
        <TextView android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary_dark"
            android:textSize="16sp"
            android:text="Dismiss"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView android:id="@+id/large_image_view"
                android:layout_width="wrap_content"
                android:minWidth="60dp"
                android:layout_marginEnd="4dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:minHeight="60dp"
                android:layout_gravity="center_vertical" />
            <ImageView android:id="@+id/small_image_view"
                android:layout_width="32dp"
                android:layout_marginEnd="-8dp"
                android:padding="4dp"
                android:layout_height="32dp"
                android:layout_marginBottom="-8dp"
                android:layout_alignBottom="@id/large_image_view"
                android:layout_alignEnd="@id/large_image_view"
                android:background="@drawable/rounded_corner_white"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Larger"/>

            <TextView android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="medium"/>

        </LinearLayout>
    </LinearLayout>

    <TextView android:id="@+id/time_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="smaller"/>

</LinearLayout>