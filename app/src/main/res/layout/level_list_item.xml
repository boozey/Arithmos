<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:padding="12dp"
    android:orientation="horizontal">
    <ImageView android:id="@+id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"/>
    <TextView android:id="@+id/textView1"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="20sp"
        android:text="Hello"/>
    <Button android:id="@+id/button1"
        android:layout_width="60dp"
        android:layout_marginStart="4dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/rounded_corner_primary"
        android:textColor="@color/text_primary_light"
        android:textSize="12sp"
        android:text="Play"/>
    <Button android:id="@+id/match_button"
        android:layout_width="100dp"
        android:layout_marginStart="4dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/rounded_corner_primary_accent"
        android:textColor="@color/text_primary_light"
        android:textSize="12sp"
        android:text="@string/match_button_text"/>
    <android.support.v7.widget.AppCompatImageButton android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ic_action_leaderboard"
        app:buttonTint="@color/primary_accent"
        android:visibility="visible"/>
</LinearLayout>