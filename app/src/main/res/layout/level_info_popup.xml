<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/level_info_popup">
    <LinearLayout
        android:layout_width="wrap_content"
        android:minWidth="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_corner_primary">
        <TextView android:id="@+id/title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:textColor="@color/text_primary_light"
            android:text="Title"/>
        <TextView android:id="@+id/subtitle_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/text_primary_light"
            android:text="Subtitle"/>
        <TextView android:id="@+id/description_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_primary_light"
            android:textSize="16sp"
            android:text="Blah blah blah blah blah. Blah blah blah blah."
            android:visibility="gone"/>
        <LinearLayout android:id="@+id/star_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">
            <TextView android:id="@+id/one_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_one_star"
                android:textColor="@color/text_primary_light"
                android:gravity="center_horizontal"
                android:text="500"/>
            <TextView android:id="@+id/two_star"
                android:layout_width="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_two_stars"
                android:textColor="@color/text_primary_light"
                android:gravity="center_horizontal"
                android:text="1000"/>
            <TextView android:id="@+id/three_star"
                android:layout_width="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_three_stars"
                android:textColor="@color/text_primary_light"
                android:gravity="center_horizontal"
                android:text="2000"/>
        </LinearLayout>
        <TextView android:id="@+id/time_limit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_primary_light"
            android:textSize="20sp"
            android:text="Time limit 3:00"/>
        <Button android:id="@+id/ok_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_corner_primary_accent"
            android:textColor="@color/text_primary_light"
            android:text="go"/>
    </LinearLayout>

</RelativeLayout>