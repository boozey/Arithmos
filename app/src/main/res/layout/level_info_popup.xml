<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/level_info_popup">
    <LinearLayout android:id="@+id/pop_up_foreground"
        android:layout_width="wrap_content"
        android:minWidth="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingTop="42dp"
        android:paddingBottom="36dp"
        android:background="@drawable/rounded_corner_primary">

        <TextView android:id="@+id/subtitle_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/game_popup_medium_text_size"
            android:textColor="@color/text_primary_light"
            android:text="Subtitle"/>
        <TextView android:id="@+id/description_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_primary_light"
            android:textSize="16sp"
            android:text="Blah blah blah blah blah. Blah blah blah blah."
            android:visibility="gone"/>
        <LinearLayout android:id="@+id/star_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">
            <TextView android:id="@+id/one_star"
                android:layout_width="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_one_star_80dp"
                android:textColor="@color/text_primary_light"
                android:textSize="@dimen/game_popup_small_text_size"
                android:gravity="center_horizontal"
                android:text="1500"/>
            <TextView android:id="@+id/two_star"
                android:layout_width="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_two_stars_80dp"
                android:textColor="@color/text_primary_light"
                android:textSize="@dimen/game_popup_small_text_size"
                android:gravity="center_horizontal"
                android:text="1000"/>
            <TextView android:id="@+id/three_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_three_stars_80dp"
                android:textColor="@color/text_primary_light"
                android:textSize="@dimen/game_popup_small_text_size"
                android:gravity="center_horizontal"
                android:text="2000"/>
        </LinearLayout>
        <TextView android:id="@+id/time_limit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/text_primary_light"
            android:textSize="@dimen/game_popup_medium_text_size"
            android:text="Time limit 3:00"/>
    </LinearLayout>
    <TextView android:id="@+id/title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_primary_accent"
        android:padding="16dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/pop_up_foreground"
        android:layout_marginBottom="-36dp"
        android:elevation="8dp"
        android:textSize="@dimen/game_popup_large_text_size"
        android:textColor="@color/text_primary_light"
        android:text="Title"/>

    <Button android:id="@+id/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/pop_up_foreground"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="-8dp"
        android:background="@drawable/rounded_corner_primary_accent"
        android:textColor="@color/text_primary_light"
        android:text="@string/start"/>
</RelativeLayout>