<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText android:id="@+id/run_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:inputType="textNoSuggestions"
        android:hint="Numbers ex. 2, 3"/>
    <Button android:id="@+id/check_button"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="end"
        android:background="@drawable/rounded_corner_primary"
        android:textColor="@color/text_primary_light"
        android:text="check"/>
    <EditText android:id="@+id/goals_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:inputType="none"
        android:hint="Press check to find goals"/>

</LinearLayout>