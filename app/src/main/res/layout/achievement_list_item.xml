<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:padding="12dp"
    android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView android:id="@+id/image_view"
            android:layout_width="wrap_content"
            android:minWidth="60dp"
            android:layout_marginStart="@dimen/horz_image_offset_padding_start"
            android:layout_marginEnd="@dimen/horz_image_offset_padding_end"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:minHeight="60dp"
            android:background="@mipmap/ic_launcher"
            android:visibility="visible"/>
        <ProgressBar android:id="@+id/progress_bar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:max="100"
            android:progress="50"
            android:visibility="gone"/>
            <TextView android:id="@+id/progress_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="16sp"/>
            <TextView android:id="@+id/xp_textview"
                android:layout_width="wrap_content"
                android:layout_marginEnd="-12dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-12dp"
                android:layout_alignBottom="@id/image_view"
                android:layout_alignEnd="@id/image_view"
                android:padding="4dp"
                android:textSize="18sp"
                android:textColor="@color/text_inactive_dark"
                android:text="10 XP"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/text_inactive_dark"
                android:text="Larger"/>

            <TextView android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/text_inactive_dark"
                android:text="medium"/>

        </LinearLayout>

</LinearLayout>